{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/esm",
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "importHelpers": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": [
      "ESNext"
    ]
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}